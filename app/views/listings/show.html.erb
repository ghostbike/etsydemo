<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
			<%= image_tag @listing.image.url %>
		</div>
	</div>
	<div class="col-md-6">
		<h3><%= @listing.ame %></h3>
		<h5><%= number_to_currency(@listing.price) %></h5>
		<h5><%= @listing.description %></h5>
		<!-- whenever you see an _id in the route path you need to tell rails which listing to use -->
		<br><%= link_to "Buy It Now", new_listing_order_path(@listing), class: "btn btn-primary" %>
	</div>
	
</div>
<br>
<% if current_user == @listing.user %>
<%= link_to 'Edit', edit_listing_path(@listing), Class: "btn btn-link"  %> 
<% end %>
<%= link_to 'Back', listings_path, Class: "btn btn-default"  %>

