
<div class="left">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-sm-4 col-md-3">
         <div class="thumbnail">
          <%= image_tag listing.image.url%>
          <div class="caption">
            <h4><%= listing.ame %></h4>
             <h6><%= listing.description %></h6>
            <p><%= number_to_currency(listing.price) %></p>
            <%= link_to 'Show', listing, Class: "btn btn-default" %>
            <%= link_to 'Edit', edit_listing_path(listing), Class: "btn btn-default"  %>
            <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, Class: "btn btn-default"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>
<%= link_to 'New Listing', new_listing_path, Class: "btn btn-default"  %>
